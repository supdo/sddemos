<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:centerColor="#BBBBBB" android:endColor="#EEEEEE" android:startColor="#CCCCCC" />
			<solid android:color="#00AAFF" />
            <stroke android:width="0.1dip" android:color="#00AAFF" />

            <corners android:radius="6dip" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#ffc2b7" android:startColor="#ffc2b7" />
			<solid android:color="#0099FF" />
            <stroke android:width="1dip" android:color="#00AAFF" />

            <corners android:radius="6dip" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"><shape>
            <gradient android:angle="90" android:centerColor="#DDDDDD" android:endColor="#F0F0F0" android:startColor="#EEEEEE" />
			<solid android:color="#00BBFF" />
            <stroke android:width="1px" android:color="#000000" />

            <corners android:radius="6dip" />
        </shape></item>

</selector>